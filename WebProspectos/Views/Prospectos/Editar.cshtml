@model WebProspectos.Models.ViewModels.EditarProspectoViewModel
@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Nuevo", "Prospectos", FormMethod.Post, new { role = "form", @class = "" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationMessage("error", new { @class = "text-danger" })

            @Html.HiddenFor(d => d.Id)
            @Html.LabelFor(d => d.Nombre)
            @Html.TextBoxFor(d => d.Nombre, new { @class = "form-control", @readonly = "readonly" })

            @Html.LabelFor(d => d.PrimerApellido)
            @Html.TextBoxFor(d => d.PrimerApellido, new { @class = "form-control", @readonly = "readonly" })



            @Html.LabelFor(d => d.SegundoApellido)
            @Html.TextBoxFor(d => d.SegundoApellido, new { @class = "form-control", @readonly = "readonly" })


            @Html.LabelFor(d => d.Calle)
            @Html.TextBoxFor(d => d.Calle, new { @class = "form-control", @readonly = "readonly" })


            @Html.LabelFor(d => d.Numero)
            @Html.TextBoxFor(d => d.Numero, new { @class = "form-control", @readonly = "readonly" })


            @Html.LabelFor(d => d.Colonia)
            @Html.TextBoxFor(d => d.Colonia, new { @class = "form-control", @readonly = "readonly" })


            @Html.LabelFor(d => d.CodigoPostal)
            @Html.TextBoxFor(d => d.CodigoPostal, new { @class = "form-control", @readonly = "readonly" })


            @Html.LabelFor(d => d.Telefono)
            @Html.TextBoxFor(d => d.Telefono, new { @class = "form-control", @readonly = "readonly" })


            @Html.LabelFor(d => d.Rfc)
            @Html.TextBoxFor(d => d.Rfc, new { @class = "form-control", @readonly = "readonly" })

            @Html.LabelFor(d => d.Estatus)
            @Html.TextBoxFor(d => d.Estatus, new { @class = "form-control", @readonly = "readonly" })

            <div>
                @Html.Label("Nuevo estatus")
            </div>
            @Html.DropDownList("NombreDelComboBox", ViewBag.ListaDeElementos as SelectList, "Seleccione una opcíon", new { @class = "btn btn-secondary dropdown-toggle col-6" })

            <div class="d-flex col-3 justify-content-between mt-2">
                <a class="btn btn-warning">Salir</a>
                <input id="btnGuardar" type="submit" class="btn btn-success disabled" value="Guardar" />
            </div>
        }
    </div>
</div>

